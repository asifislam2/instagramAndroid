<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadImage"
    android:background="@color/black"
    >

    <LinearLayout
        android:id="@+id/topbar_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#250606"
            android:layout_marginRight="5dp"
            android:src="@drawable/asif"
            android:layout_marginLeft="20sp"
            />

        <TextView
            android:id="@+id/day_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asif_hawlader909"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 m"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/threedotthree"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"

                />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/myimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@id/topbar_lay"
        android:layout_above="@id/bottom_lay"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:id="@+id/bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@drawable/circle_transparent_five"
            >

            <EditText
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Send message"
                android:textColorHint="@color/white"
                android:gravity="start|center"
                android:background="@null"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"

                />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heartpicture"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/senticon"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

</RelativeLayout>